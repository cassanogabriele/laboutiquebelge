{% extends 'base.html.twig' %}

{% block title %}Liste de souhait - La Boutique Belge{% endblock %}


{% block content %}
<div class="container">
    <h3>Articles similaires</h3>
        <div class="row">           
            <div class="col-md-8">
                <div class="row">
                    {% for similarProduct in similarProducts %}
                     <div class="col-md-3 ftco-animate">
                            <div class="product text-center">
                                <a href="{{ path('produit', { 'slug' : similarProduct.slug } ) }}"><img src="/uploads/{{ similarProduct.illustration }}" alt="{{ similarProduct.name }}" class="img-fluid"></a>
                                
                                <div class="text py-3 pb-4 px-3">                                   
                                    <h5>{{ similarProduct.name }}</h5>

                                    <div class="d-flex">
                                        <div class="pricing">
                                            <p class="price">
                                                <i class="ion-ios-pricetag"></i>
                                                <span class="price-sale">
                                                    {{ similarProduct.price}} €
                                                </span>
                                            </p>

                                            <p class="price">
                                                <i class="ion-md-plane"></i>
                                                <span class="price-sale">                                              
                                                 €
                                                </span>
                                              </p>
                                        </div>
                                    </div>
                                    <div class="bottom-area d-flex px-3">
                                        <div class="m-auto d-flex">                           
                                            <p class="mt-2">
                                            <a href=""><i class='fa fa-heart text-warning'></i></a>
                                            <a href="{{ path('add_to_cart', { 'id': product.id, 'page': 'confirm' }) }}">
                                                <i class="fas fa-cart-plus"></i>
                                            </a>
                                        </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>   
                    {% endfor %}
                </div>                
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-start">
                        {% if product %}
                            <a href="{{ path('produit', { 'slug' : product.slug } ) }}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid img-thumbnail small-square-image"></a>

                            <div class="ml-3">
                                <h6 class="mb-1 text-success">
                                    <i class="fa-solid fa-check"></i>
                                    Ajouté au panier
                                </h6>
                           
                                <p class="mb-0">{{ product.name }}</p>
                                <p class="mb-0">{{ product.price }} €</p>
                                <p><a href="{{ path('cart') }}" class="btn btn-primary mt-2">Voir mon panier</a></p>
                                <p class="mt-3 text-primary"><a class="" href="{{ path('products') }}">Continuer mes achats</a></p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>            
        </div>
    </div>

{% endblock %}